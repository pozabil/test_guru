<div class="row justify-content-center">
  <div class="col col-lg-8 ms-1">
    <div class="h1 mt-2 mb-4">
      <span class="checked-image-container">
        <%= image_tag (@badge.image_path_is_correct? ? @badge.image_path : ""), size: "64" %>
      </span>
      <span class="ms-2">
        <%= @badge.title %>
      </span>
    </div>

    <div>
      <p>
        <div><b><%= t('.description') %></b></div>
        <div><%= @badge.description %></div>
      </p>
    </div>

    <table>
      <tr>
        <td><%= link_to t('back'), badges_path, class: "link-secondary" %></td>
      </tr>
    </table>
  </div>
</div>

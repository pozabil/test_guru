<h1><%= t('.header', title: @test_passage.test.title) %></h1>

<div><%= t('.answer_the_question') %></div>
<div><strong><%= @test_passage.current_question.body %></strong></div><br>

<div>
  <%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  	<%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body, include_hidden: false do |b| %>
  	<div>
  	  <%= b.check_box id: "answer_ids_#{b.object.id}" %>
  	  <%= b.label %>
  	</div>
  	<% end %><br>

  	<div><%= form.submit t('.next_question') %></div>
  <% end %>
</div><br>

<div>
  <%= t('.current_question_number') %> <%= @test_passage.current_question_number %>,
  <%= t('.questions_count') %> <%= @test_passage.test.questions.size %>
</div><br>

<%= link_to t('exit'), tests_path %>

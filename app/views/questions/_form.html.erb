<h1><%= question_header(@question) %></h1>

<%= form_with model: [@test, @question], local: true do |form| %>
  <%= render 'shared/errors', resource: @question %>

  <div>
    <%= form.label :body, 'Текст вопроса:' %><br>
    <%= form.text_area :body, size: '60x5' %>
  </div><br>

  <div>
    <%= form.submit question_saver_text(@question) %>
  </div><br>
<% end %>

<%= link_to 'Назад', test_path(@question.test) %>

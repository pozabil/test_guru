<h1><%= answer_header(@answer) %></h1>

<%= form_with model: [:admin, @question, @answer], local: true do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <div>
    <%= form.label :body, 'Текст ответа:' %><br>
    <%= form.text_area :body, size: '60x5' %>
  </div><br>

  <div>
    <%= form.label :correct, 'Корректность:' %>
    <%= form.check_box :correct, id: :answer_correct %>
  </div><br>

  <div>
    <%= form.submit answer_saver_text(@answer) %>
  </div><br>
<% end %>

<%= link_to 'Назад', admin_question_path(@answer.question) %>

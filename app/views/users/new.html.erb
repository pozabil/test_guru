<h1>Регистрация</h1>

<%= form_with model: @user, local: true do |form| %>
  <%= render 'shared/errors', resource: @user %>

   <div>
    <%= form.label :name, 'Введите имя:' %><br>
    <%= form.text_field :name, id: :user_name, size: 60 %>
  </div><br>

  <div>
    <%= form.label :email, 'Введите почту:' %><br>
    <%= form.text_field :email, id: :user_email, size: 60 %>
  </div><br>

   <div>
    <%= form.label :password, 'Введите пароль:' %><br>
    <%= form.password_field :password, id: :user_password, size: 60 %>
  </div><br>

    <div>
    <%= form.label :password_confirmation, 'Повторите пароль:' %><br>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation, size: 60 %>
  </div><br>

  <div>
    <%= form.submit 'Зарегистрироваться' %>
  </div><br>
<% end %>

<%= link_to 'На главную', root_path %>

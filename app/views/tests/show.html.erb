<h1><%= @test.title %></h1>

<div><b>Уровень:</b>
  <%= test_level(@test) %>
</div><br>

<div><b>Категория:</b>
  <%= @test.category.title %>
</div><br>

<%= render 'test_questions' %>

<div>
  <%= link_to 'Создать новый вопрос', new_test_question_path(@test) %>
</div><br>

<div>
  | <%= link_to 'Назад', tests_path %>
  | <%= link_to 'Редактировать', edit_test_path(@test) %>
  | <%= delete_test(@test) %> |
</div>

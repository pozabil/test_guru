<%
author = 'pozabil'
project_title = 'TestGuru'
school_link = 'https://thinknetica.com/'
%>

<div class="p-3 mt-auto<%= " bg-admin" if admin_panel? %>">
	<footer class="d-flex flex-wrap justify-content-center align-items-center">
		<span class=<%= (admin_panel? ? "transparency-dark-text" : "transparency-light-text") %>><%= year %>
			<%= t('.author_name') %>.
			<%= t('.project') %>
			<%= github_url(author, project_title) %>
			<%= t('.project_description') %>.
			<%= link_to t('.school_link_description'), school_link, class: (admin_panel? ? "link-light" : "link-primary") %>.
		</span>
	</footer>
	<footer class="d-flex flex-wrap justify-content-center align-items-center">
		<%= link_to t('.feedback'), new_feedback_path, class: (admin_panel? ? "link-light" : "link-primary") %>
	</footer>
</div>
